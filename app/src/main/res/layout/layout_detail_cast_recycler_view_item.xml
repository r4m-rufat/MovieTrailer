<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="230dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background_cast_item"
    android:layout_marginTop="10dp">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardCornerRadius="20dp"
           app:cardBackgroundColor="?attr/fc_white_black"
           android:layout_margin="0.5dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:src="@drawable/ic_person"
                   android:id="@+id/cast_image"
                   android:scaleType="centerCrop"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_cast_name_inFilm"
                   android:textSize="14sp"
                   android:paddingLeft="5dp"
                   android:paddingTop="5dp"
                   android:paddingRight="5dp"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:textColor="?attr/txt_black_white"
                   android:textStyle="bold"
                   android:text="Loading..."/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/txt_cast_name_inReal"
                   android:textSize="13sp"
                   android:paddingLeft="5dp"
                   android:paddingRight="5dp"
                   android:maxLines="2"
                   android:ellipsize="end"
                   android:textColor="?attr/txt_black_white"
                   android:fontFamily="sans-serif-thin"
                   android:text="Loading..."/>


           </LinearLayout>

       </androidx.cardview.widget.CardView>

</LinearLayout>