<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTrailer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="color">@style/spinner_style</item>

        <!-- light mode -->
        <item name="txt_black_white">@color/black</item>
        <item name="txt_white_black">@color/white</item>
        <item name="background_white_black">@color/white</item>
        <item name="fc_white_black">@color/white</item>
        <item name="blue_white">@color/blue</item>
        <item name="background_filter">@color/filter</item>
        <item name="gray_white">@color/gray</item>
        <item name="bg_history_item">@color/bg_history_gray</item>

    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#66000000</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Theme.MovieTrailer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieTrailer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieTrailer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">

        <item name="android:color">#fff</item>

    </style>

    <style name="AppTheme.Base.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="color">@style/spinner_style</item>

        <!-- dark mode -->
        <item name="txt_black_white">@color/white</item>
        <item name="txt_white_black">@color/black</item>
        <item name="background_white_black">@color/bg_black</item>
        <item name="fc_white_black">@color/fc_black</item>
        <item name="blue_white">@color/white</item>
        <item name="background_filter">@color/filter_dark</item>
        <item name="gray_white">@color/white</item>
        <item name="bg_history_item">@color/fc_black</item>

    </style>

</resources>